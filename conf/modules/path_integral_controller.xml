<!DOCTYPE module SYSTEM "module.dtd">

<module name="path_integral_controller">
  <doc>
    <description>Run a path integral algorithm and measure the running time needed to perform the computations</description>
  </doc>
  <header>
    <file name="path_integral_controller.h"/>
  </header>
  <init fun="pi_init()"/>
  <periodic fun="compute_optimal_controls_periodic()" freq="10"/>
  <makefile target="ap">
    <file name="path_integral_controller.c"/>
    <file name="sampler.c"/>
    <flag name="LDFLAGS" value="lgsl"/>
  </makefile>
</module>
